 
    <section class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3 text-center">
                <div class="card" style="width: 18rem">
                    <img src="/product-images/{{this.product._id}}.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.product.name}}</h5>
                        <p>Rs.{{this.product.Price}}</p>
                        <p class="card-text">Quantity: {{this.quantity}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>

    <style>
        .card{
            background-color: whitesmoke;
            border-radius: 20px;
         transform-origin: top bottom;
       animation: rotateA 0.6s ease-in-out forwards;
        }

@keyframes rotateA {
  0% {
    opacity: 0;
    transform: scale(0);
  }
  50% {
    transform: scale(0);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}
    </style>