
    <section class="container mt-5 font-monospace">
        <div class="row">
            {{#each products}}
            <div class="col-md p-3 text-center">
                <div class="card mx-auto" style="width: 18rem">
                    <img src="product-images/{{this._id}}.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p>â‚¹ {{this.Price}}</p>
                        <p class="card-text">{{this.Description}}</p>
                        {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add To Cart</a> --}}
                        {{#if ../user}}
                        <button onclick="addToCart('{{this._id}}')" class="btn btn-primary badge rounded-pill">Add to cart</button>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>

