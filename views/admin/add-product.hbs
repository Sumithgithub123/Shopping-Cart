<section class="font-monospace">
    <div class="container mt-5">
        <div class="row">
           
           <div class="col-md-6 m-auto">
               <h2 class="text-center">Add Product</h2>
               <form action="/admin/add-product" method="post" enctype="multipart/form-data">
                <label for="">Name</label>
                <input required type="text" name="name" class="form-control">
                
                <label for="">Category</label>
                <input required type="text" name="Category" class="form-control">

                <label for="">Price</label>
                <input required type="text" name="Price" class="form-control">

                <label for="">Description</label>
                <input required type="text" name="Description" class="form-control">

                <label for="">Image</label>
                <input required name="image" type="file" class="form-control">
                <input type="text" hidden name="adminId" value="{{admindetails._id}}" id="">

                <button type="submit" class="form-control btn btn-success mt-2">Submit</button>
               </form>
           </div>
        </div>
    </div>
</section>